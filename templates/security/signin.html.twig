{% extends 'base.html.twig' %}

{% block title %}Miara-miasa{% endblock %}
{% form_theme formSignIn 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <!-- Menu -->
    <div class="tab-content form-signin">

    <div class="card shadow">
      <div class="card-body">
    
         
           
              <div class="col-lg-12">
                {{ form_start(formSignIn) }}
    
                <div class="form-group">
                    {{ form_row(formSignIn.username, {'attr': {'placeholder':'Username or email'}})}}
                </div>
                <div class="form-group">
                    {{ form_row(formSignIn.password, {'attr': {'placeholder':'Password'}})}}
                </div>
                <div class="text-center">
                  <button type="submit" class="btn-default-primary">Se connecter</button>
                </div>
                 
                {{ form_end(formSignIn) }}
                
              </div>
    

        
        
      </div>
    </div>
    </div>

{% endblock %}
